{
    "definitions": {
        "ACC8": ["A", "B"],
        "GPR8": ["A", "B", "C", "D"],
        "GPR16": ["X", "Y", "E"],
        "MOV8_REGS": ["A", "B", "C", "D"],
        "MOV16_LHSREGS": ["SP", "X", "Y", "E"],
        "MOV16_RHSREGS": ["SP", "X", "Y", "E", "PC"],
        "CAN_INCDEC": ["A", "B", "X", "Y", "E"]
    },
    "instructions": {
        "nop": {
            "desc": "no operation",
            "modes": ["inherent"]
        },
        "break": {
            "desc": "force into single step mode",
            "modes": ["inherent"]
        },
        "_ext": {
            "desc": "go into extended inst page for next inst",
            "modes": ["implied"],
            "operands": [1, 2]
        },
        "wai": {
            "desc": "wait until interrupt",
            "modes": ["inherent"]
        },
        "clc": {
            "desc": "clear carry flag",
            "modes": ["inherent"]
        },
        "cli": {
            "desc": "enable interrupts",
            "modes": ["inherent"]
        },
        "clv": {
            "desc": "clear overflow flag",
            "modes": ["inherent"]
        },
        "sec": {
            "desc": "set carry flag",
            "modes": ["inherent"]
        },
        "sei": {
            "desc": "disable interrupts",
            "modes": ["inherent"]
        },
        "mov_8": {
            "desc": "move 8bit register values",
            "modes": ["implied"],
            "operands": ["MOV8_REGS", "MOV8_REGS"]
        },
        "mov_16": {
            "desc": "move 16bit register values",
            "modes": ["implied"],
            "operands": ["MOV16_LHSREGS", "MOV16_RHSREGS"]
        },
        "load_8": {
            "desc": "load 8bit register",
            "modes": [
                "immediate",
                "absolute",
                "direct",
                "indexed",
                "indexed-postinc",
                "indexed-postdec",
                "const-offset-indexed",
                "acc-offset-indexed",
                "absolute-indirect",
                "direct-indirect",
                "acc-offset-direct"
            ],
            "operands": ["GPR8"]
        },
        "load_16": {
            "desc": "load 16bit register",
            "modes": [
                "immediate",
                "absolute",
                "direct",
                "absolute-indirect",
                "direct-indirect",
                "indexed",
                "const-offset-indexed",
                "acc-offset-indexed"
            ],
            "operands": ["GPR16"]
        },
        "store_8": {
            "desc": "store 8bit register",
            "modes": [
                "direct",
                "absolute",
                "indexed",
                "indexed-postinc",
                "indexed-postdec",
                "const-offset-indexed",
                "acc-offset-indexed"
            ],
            "operands": ["GPR8"]
        },
        "store_16": {
            "desc": "store 16bit register",
            "modes": [
                "direct",
                "absolute",
                "indexed",
                "indexed-postinc",
                "indexed-postdec",
                "const-offset-indexed",
                "acc-offset-indexed"
            ],
            "operands": ["GPR16"]
        },
        "inc_reg": {
            "desc": "increment a register value",
            "modes": ["implied"],
            "operands": ["CAN_INCDEC"]
        },
        "inc_mem": {
            "desc": "increment a memory value",
            "modes": ["absolute", "direct", "derefed"]
        },
        "dec_reg": {
            "desc": "decrement a register value",
            "modes": ["implied"],
            "operands": ["CAN_INCDEC"]
        },
        "dec_mem": {
            "desc": "decrement a memory value",
            "modes": ["absolute", "direct", "derefed"]
        },
        "add_reg": {
            "desc": "add register value to accumulator",
            "modes": ["implied"],
            "operands": ["ACC8", "GPR8"]
        },
        "add_mem": {
            "desc": "add memory value to accumulator",
            "modes": ["immediate", "direct", "absolute", "derefed"]
        }
    }
}